    <body>
        <header>
            <section class="title-group">
                <div class="header-group">
                    <img class="kuma-icon" src="/magickuma/static/images/kumaicon.jpg" alt="KUMAアイコン">
                    <span class="kuma-char">KU<span class="red">M</span>A</span>
                    <nav id="menu">
                        <span></span><span></span><span></span>
                    </nav>
                </div>
                <span class="kuma-japanese">京都大学<span class="red">奇術</span>研究会</span>
            </section>
            <ul class="wide-menu">
                <li class="{% if page.url == '/' %}active{% endif %}">
                    <a href="/magickuma/">トップ</a>
                </li>
                <li class="{% if page.url == '/about/' %}active{% endif %}">
                    <a href="/magickuma/about/">サークル紹介</a>
                </li>
                <li class="{% if page.url == '/festival/' %}active{% endif %}">
                    <a href="/magickuma/festival/">マジックキャッスル(NF)</a>
                </li>
                <li class="{% if page.url == '/request/' %}active{% endif %}">
                    <a href="/magickuma/request/">出演依頼</a>
                </li>
                <li>
                    <a class="logo" href="https://x.com/kyodai_magic" target="_blank" rel="noopener noreferrer">
                        <img class="logo" src="/magickuma/static/images/x_logo_black.svg" alt="X">
                    </a>
                </li>
                <li>
                    <a class="logo" href="https://www.instagram.com/kuma_kyodaimagic/" target="_blank" rel="noopener noreferrer">
                        <img class="logo" src="/magickuma/static/images/instagram_logo_black.svg" alt="Instagram">
                    </a>
                </li>
            </ul>
        </header>
        <section id="menu-section">
            <ul>
                <li class="{% if page.url == '/' %}active{% endif %}">
                    <a href="/">トップ</a>
                </li>
                <li class="{% if page.url == '/about/' %}active{% endif %}">
                    <a href="/about/">サークル紹介</a>
                </li>
                <li class="{% if page.url == '/festival/' %}active{% endif %}">
                    <a href="/festival/">マジックキャッスル(NF)</a>
                </li>
                <li class="{% if page.url == '/request/' %}active{% endif %}">
                    <a href="/request/">出演依頼</a>
                </li>
            </ul>
        </section>

        <main>
            {{ content | safe }}
        </main>
        
        <footer class="phone">
            <div class="logo-group">
                <a href="https://x.com/kyodai_magic" target="_blank" rel="noopener noreferrer">
                    <img class="logo" src="/static/images/x_logo_white.svg" alt="X">
                </a>
                <a href="https://www.instagram.com/kuma_kyodaimagic/" target="_blank" rel="noopener noreferrer">
                    <img class="logo" src="/static/images/instagram_logo_white.svg" alt="Instagram">
                </a>
            </div>
            <span class="copyright">
                &copy; 2025 KUMA
            </span>
            <div class="logo-group"></div>
        </footer>
        <footer class="pc">&copy; 2025 KUMA</footer>
        
        <script src="/static/js/menu.js"></script>
    </body>

